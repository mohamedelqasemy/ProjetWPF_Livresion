<UserControl x:Class="AppGestionEtudiant.WelcomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGestionEtudiant"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <ImageBrush ImageSource="/Welcome.png"/>
    </UserControl.Background>
    <Grid>
        <StackPanel>
        <Image HorizontalAlignment="Center" Height="160" VerticalAlignment="Top" Width="160" Source="/logowpf.png" Margin="0 50 0 0" >
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
            <TextBlock Text="Bienvenue"  HorizontalAlignment="Center" FontSize="100" FontFamily="Freestyle Script" Foreground="#FFE36D28" FontWeight="Bold">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock Text="Application de Gestion des Etudiants"  HorizontalAlignment="Center"  FontSize="30" Foreground="#FF03AAE9" FontWeight="Bold" Margin="0 -20 0 0">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>

        </StackPanel>

    </Grid>
</UserControl>
